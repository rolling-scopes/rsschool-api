{
  "name": "rsschool-api",
  "version": "0.0.2",
  "description": "rs.school API",
  "repository": "github:rolling-scopes/rsschool-api",
  "scripts": {
    "build": "tsc",
    "start": "nodemon  --inspect --watch 'src/**/*' -e ts --exec node  -r ts-node/register -r dotenv/config ./index.ts | pino-pretty -i time,hostname,pid",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "format": "prettier --config .prettierrc.json --write \"./src/**/*.ts\"",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "lint-staged": "lint-staged",
    "precommit-disabled": "npm-run-all lint-staged lint test",
    "swagger": "swagger-jsdoc -d swaggerDef.js -o ./public/swagger.yml ./src/routes/**/*.ts ./src/routes/**.ts"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format",
      "git add"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "~3.0.0",
    "@octokit/rest": "15.8.1",
    "@types/node-cache": "^4.1.3",
    "http-status-codes": "~1.3.2",
    "koa": "~2.7.0",
    "koa-basic-auth": "~4.0.0",
    "koa-bodyparser": "~4.2.1",
    "koa-passport": "~4.1.3",
    "koa-router": "~7.4.0",
    "koa-session": "~5.10.1",
    "koa-static": "~5.0.0",
    "koa2-swagger-ui": "~2.13.2",
    "node-cache": "^4.2.0",
    "node-fetch": "~2.6.0",
    "passport-github": "~1.1.0",
    "pg": "~7.11.0",
    "pino": "~5.12.5",
    "reflect-metadata": "0.1.13",
    "swagger-jsdoc": "^3.2.9",
    "typeorm": "~0.2.17"
  },
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@types/jest": "24.0.11",
    "@types/koa": "^2.0.48",
    "@types/koa-basic-auth": "2.0.3",
    "@types/koa-bodyparser": "4.2.0",
    "@types/koa-passport": "^4.0.1",
    "@types/koa-router": "^7.0.40",
    "@types/koa-session": "^5.7.4",
    "@types/koa-static": "^4.0.1",
    "@types/koa__cors": "^2.2.2",
    "@types/node": "^10.3.1",
    "@types/node-fetch": "^2.3.3",
    "@types/passport-github": "1.1.3",
    "@types/pg": "^7.4.14",
    "@types/pino": "^5.8.6",
    "@types/supertest": "^2.0.7",
    "cross-env": "5.1.6",
    "dotenv": "6.0.0",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "nodemon": "1.18.11",
    "npm-run-all": "4.1.5",
    "pino-pretty": "~2.6.1",
    "prettier": "~1.18.2",
    "source-map-support": "~0.5.12",
    "supertest": "~4.0.2",
    "ts-jest": "~24.0.2",
    "ts-node": "~8.2.0",
    "tslint": "~5.17.0",
    "typescript": "~3.5.1"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/*.d.ts"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "setupFiles": [
      "./jestsetup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
