{
  "name": "rsschool-api",
  "version": "0.0.1",
  "description": "API for accessing rsschool",
  "repository": "github:rolling-scopes/rsschool-api",
  "scripts": {
    "build": "tsc",
    "start": "nodemon  --inspect --watch 'app/**/*' -e ts --exec node  -r ts-node/register -r dotenv/config ./index.ts | bunyan -o short",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "pretty": "prettier --config .prettierrc.json --write \"./app/**/*.ts\"",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "lint-staged": "lint-staged",
    "precommit": "npm-run-all lint-staged lint test",
    "commitmsg": "commitlint -E GIT_PARAMS"
  },
  "lint-staged": {
    "*.ts": [
      "npm run pretty",
      "git add"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "2.2.1",
    "@octokit/rest": "15.8.1",
    "@types/csv-parse": "1.1.11",
    "@types/node-schedule": "^1.2.2",
    "bunyan": "2.0.2",
    "csv-parse": "2.4.0",
    "http-status-codes": "1.3.0",
    "koa": "2.5.1",
    "koa-bodyparser": "4.2.1",
    "koa-passport": "4.1.0",
    "koa-router": "7.4.0",
    "koa-session": "5.8.1",
    "koa-static": "4.0.3",
    "koa2-ratelimit": "0.5.0",
    "koa2-swagger-ui": "2.9.1",
    "mongoose": "5.1.4",
    "node-schedule": "^1.3.0",
    "passport-github": "1.1.0",
    "telegraf": "^3.22.2"
  },
  "devDependencies": {
    "@commitlint/cli": "7.0.0",
    "@commitlint/config-conventional": "7.0.1",
    "@types/bunyan": "1.8.4",
    "@types/jest": "23.0.0",
    "@types/koa": "2.0.46",
    "@types/koa-bodyparser": "4.2.0",
    "@types/koa-passport": "4.0.1",
    "@types/koa-router": "7.0.28",
    "@types/koa-session": "5.7.4",
    "@types/koa-static": "4.0.0",
    "@types/koa__cors": "2.2.2",
    "@types/lodash": "4.14.109",
    "@types/mongoose": "5.0.15",
    "@types/node": "10.3.1",
    "@types/passport-github": "1.1.3",
    "@types/supertest": "^2.0.4",
    "cross-env": "5.1.6",
    "dotenv": "6.0.0",
    "husky": "0.14.3",
    "jest": "23.1.0",
    "lint-staged": "7.1.3",
    "mockingoose": "2.10.1",
    "nodemon": "1.17.5",
    "npm-run-all": "4.1.3",
    "prettier": "1.13.4",
    "source-map-support": "0.5.6",
    "supertest": "^3.1.0",
    "ts-jest": "22.4.6",
    "ts-node": "6.1.0",
    "tslint": "5.10.0",
    "typescript": "2.9.1"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "app/**/*.ts",
      "!**/*.d.ts"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts)"
    ],
    "setupFiles": [
      "./jestsetup.js"
    ]
  }
}
